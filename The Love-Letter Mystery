pinomile question---
My Solution--

import java.io.*;
import java.math.*;
import java.security.*;
import java.text.*;
import java.util.*;
import java.util.concurrent.*;
import java.util.regex.*;

public class Solution {

public static void main(String[] args){
    Scanner sc =new Scanner(System.in);
    int test=sc.nextInt();
    sc.nextLine();
   
    for(int t=0;t<test;t++){
        String x=sc.nextLine();
        int numberofpredictions=0;
        int i=0;
    int j=x.length()-1;
        
         while(i<j){
             numberofpredictions+=Math.abs(x.charAt(i)-x.charAt(j));
             i++;
             j--;
         }
System.out.println(numberofpredictions);
    }
}

}
